NAME = arrray

SRCS =  main.cpp 

OBJS = $(SRCS:.cpp=.o)

CXX = c++

CXFLAGS =  -Wall -Wextra -Werror -std=c++98

$(RM) = rm -f

all: $(NAME)

$(NAME): $(OBJS)
	$(CXX) $(CXFLAGS) $(OBJS) -o $(NAME)

%.o: %.cpp
	$(CXX) $(CXFLAGS) -c $< -o $@

clean:
	$(RM) $(OBJS)

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean fclean re